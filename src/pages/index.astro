---
import SourceNotice from "../components/SourceNotice.astro"
import Partial from "../components/Partial.astro"
import CommitInfo from "../components/CommitInfo.astro"
import ImageButton from "../components/ImageButton.astro"
import MobileModal from "../components/MobileModal.astro"

import "../styles/circle-bg.css"
import "../styles/cursor-circle.css"
import "../styles/style.css"
import "../styles/global.css"
---

<!doctype html>

<html lang="en">
	<head>
		<title>silent night</title>

		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<meta
			name="description"
			content="part time programmer, full time lunaui."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta content="#FCD4E0" data-react-helmet="true" name="theme-color" />
		<meta content="Lunaui" property="og:title" />
		<meta
			content="part time programmer, full time lunaui."
			property="og:description"
		/>
		<meta content="https://neko.lunaui.cc/" property="og:url" />
		<meta
			content="../assets/images/luna-logo.png"
			property="og:image"
		/>

		

		<!-- Webrings -->
		<link
			rel="stylesheet"
			href="https://webring.nekoweb.org/onionring.css"
		/>

		<!-- 3rd party CDNs -->
		<link
			href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
			rel="stylesheet"
		/>

		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
			integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>

		<!-- 3rd party scripts -->
		<script is:inline src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	</head>

	<body>
    <SourceNotice/>
		<main>
			<div id="logo">
				<img
					src="../src/assets/images/luna-logo.png"
					alt="Lunaui Logo"
				/>
			</div>

			<nav id="top-nav">
				<span id="now-playing">&#9834;ユメガタリ ～ 雨の日トロイメライ ～</span>
				<span id="now-playing-button"><i class='bx bx-volume-full'></i> play music?</span>
				<p id="catchphrase">
					part time programmer, full time lunaui.
				</p>
				<p>
					<a id="me" class="top-nav-btn" href="#">me</a>
					<a id="projects" class="top-nav-btn" href="#">projects</a>
					<a id="blog" class="top-nav-btn" href="/blog/">blog</a>
					<a id="links" class="top-nav-btn" href="#">links</a>
					<a href="https://lunaui.atabook.org/">guestbook</a>
					<a href="https://nekoweb.org/follow/lunaui" style="border: none;">[+]</a>
				</p>
			</nav>

			<div id="ticker">
				<label for="inline-bar" style="color:#fcd4e0">
					Layout v2 Progress
				</label>
				<div id="inline-bar">
					<div class="progress-border">
						<div class="progress-bar" style="height:24px;width:80%">
							80%
						</div>
					</div>
				</div>
				<span id="progress-placeholder-text">* This bar is temporary and <b>will</b> be replaced!</span>
			</div>

			<fieldset id="nekolink" class="box-container">
				<legend>nekolink</legend>
				<iframe width="190" height="190" style="border:none" title="nekolink" src="https://rice.nekoweb.org/nekolink.html"></iframe>
			</fieldset>

			<fieldset id="content" class="box-container">
				<legend>meow</legend>
				<Partial/>
			</fieldset>

			<fieldset id="side-content" class="box-container">
				<legend>webrings</legend>
				<div id="smallvocaring">
					<script src="https://webring.adilene.net/smallwidget.js"></script>
				</div>
				<div id="nekowebring">
					<script
						type="text/javascript"
						src="https://webring.nekoweb.org/onionring-variables.js"
					></script>
					<script
						type="text/javascript"
						src="https://webring.nekoweb.org/onionring-widget.js"
					></script>
				</div>
			</fieldset>

			<CommitInfo/>

            <fieldset id="button-container-box" class="box-container">
                <legend>my button</legend>
                <ImageButton url="https://neko.lunaui.cc" img="../src/assets/images/button.gif" attribution="button by lunaui.cc" alt="Neko button" />
                <br />
                <small>feel free to hotlink!</small>
                <textarea id="button-field" readonly onclick="this.select()" style="white-space: pre; tab-size: 0; -moz-tab-size: 0;">
					&lt;a href="https://neko.lunaui.cc"&gt;
					&lt;img
					src="https://neko.lunaui.cc/hotlink-ok/button.gif"
					height="31"
					width="88"
					style="image-rendering:pixelated;"
					/&gt;
					&lt;/a&gt;
					&lt;!-- button by lunaui.cc --&gt;
                </textarea>
            </fieldset>

			<footer id="footer">
				<ImageButton url="https://nekoweb.org/" img="https://nekoweb.org/assets/buttons/button11.gif" attribution="button by milkyway.moe" alt="Nekoweb button"/>
				<ImageButton url="https://neko.lunaui.cc" img="../src/assets/images/button.gif" attribution="button by lunaui.cc" alt="Neko button" />
				<ImageButton url="https://undertale.com/" img="../src/assets/images/btn/undertale.png" attribution="this webmaster loves undertale button" alt="Undertale button" />
				<ImageButton url="https://archlinux.org/" img="../src/assets/images/btn/arch2.png" attribution="arch user button" alt="Arch Linux button" />
				<ImageButton url="https://osu.ppy.sh/users/14048928" img="../src/assets/images/btn/osu.png" attribution="osu user button by ThinLiquid" alt="osu! button" />
				<ImageButton url="https://joo.sh" img="../src/assets/images/btn/plasma.png" attribution="joo.sh's plasma button" alt="Plasma button" />
				<ImageButton url="https://code.visualstudio.com/" img="../src/assets/images/btn/vscode.png" attribution="vs code button" alt="VS Code button" />
				<ImageButton url="https://www.youtube.com/@Petscop/videos" img="../src/assets/images/btn/petscop.png" attribution="petscop button" alt="Petscop button" />
				<ImageButton img="/src/assets/images/btn/computer.png" attribution="this website is best viewed on a computer" alt="This website is best viewed on a computer" />

				<br>
				<span>&#169; 2023-2025 lunaui. All Rights Reserved.</span>
				<br>

				<span id="contact">
					<a href="mailto:contact@lunaui.cc">contact@lunaui.cc</a>
					 | 
					<a href="/lunaui.gpg">pgp public key</a>
				</span>
			</footer>

			<div class="circles">
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
			</div>

		</main>

		<MobileModal/>

		<span id="circle" class="circle"></span>

		<script src="../scripts/commit.js"></script>
		<script src="../scripts/music.js"></script>
		<script src="../scripts/oneko.js"></script>
		<script src="../scripts/cursor.js"></script>
		<script src="../scripts/commit.js"></script>
		<script src="../scripts/mobile.js"></script>
		<script src="../scripts/script.js"></script>
        <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
	</body>
</html>