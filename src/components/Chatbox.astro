<div class="chat-wrapper">
  <div id="chat-messages" class="messages-area"></div>
  
  <div class="input-grid">
    <input type="text" id="username-input" placeholder="Name" maxlength="15" />
    <input type="color" id="color-input" value="#5865F2" />
    <input type="text" id="msg-input" placeholder="Send a message..." maxlength="200" />
    <button id="send-btn">Send</button>
  </div>
</div>

<script>
  import { io, Socket } from "socket.io-client";

  interface ChatMessage {
    id: number;
    username: string;
    color: string;
    text: string;
    timestamp: string;
  }

  const socket: Socket = io("https://neko-socket-api.lunaui.cc");

  const msgList = document.getElementById("chat-messages") as HTMLDivElement;
  const msgInput = document.getElementById("msg-input") as HTMLInputElement;
  const sendBtn = document.getElementById("send-btn") as HTMLButtonElement;
  const nameInput = document.getElementById("username-input") as HTMLInputElement;
  const colorInput = document.getElementById("color-input") as HTMLInputElement;

  const addMessage = (msg: ChatMessage): void => {
    const div = document.createElement("div");
    div.className = "msg-row";
    
    div.innerHTML = `
      <span class="timestamp">${new Date(msg.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</span>
      <span class="user" style="color: ${msg.color}">${msg.username}:</span>
      <span class="text">${msg.text}</span>
    `;
    
    msgList.appendChild(div);
    msgList.scrollTop = msgList.scrollHeight;
  };

  const loadPrefs = (): void => {
    const saved = localStorage.getItem("chat_prefs");
    if (saved) {
      const { name, color } = JSON.parse(saved);
      if (name) nameInput.value = name;
      if (color) colorInput.value = color;
    }
  };

  socket.on("history", (history: ChatMessage[]) => {
    msgList.innerHTML = ""; 
    history.forEach(addMessage);
  });

  socket.on("new_message", (msg: ChatMessage) => {
    addMessage(msg);
  });

  const sendMessage = (): void => {
    const text = msgInput.value.trim();
    const username = nameInput.value.trim() || "Anon";
    const color = colorInput.value;

    if (!text) return;

    localStorage.setItem("chat_prefs", JSON.stringify({ name: username, color }));

    socket.emit("send_message", { username, color, text });
    msgInput.value = "";
  };

  sendBtn.addEventListener("click", sendMessage);
  msgInput.addEventListener("keydown", (e: KeyboardEvent) => {
    if (e.key === "Enter") sendMessage();
  });

  loadPrefs();
</script>

